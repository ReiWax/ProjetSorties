<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <header>
    <style>
    .glow-all{
    -webkit-animation: glow-all 0.4s ease-in-out infinite alternate;
  -moz-animation: glow-all 0.4s ease-in-out infinite alternate;
  animation: glow-all 0.4s ease-in-out infinite alternate;
}


@-webkit-keyframes glow-all {
  0% {
   background-color : #FAF6F1
  }
  20% {
    background-color : #F9FAF1
  }
  40% {
    background-color : #F2FAF1
  }
  60% {
    background-color : #F1FAFA
  }
  80% {
    background-color : #F2F1FA
  }
  100% {
    background-color : #FAF1FA
  }
}
    </style>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{path('app_home')}}">
                <img src="{{ asset('assets/img/sortir.png') }}" alt="" width="50" height="50">
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{path('app_city')}}">Villes</a>
                    </li>
                    
                    {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link active" href="{{path('app_location')}}">Ajouter un Lieux</a>
                    </li>
                    {% endif %}
                    
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Accueil</a>
                    </li>

                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link active" href="{{path('app_user_profil')}}">Mon profil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="{{path('app_logout')}}">Se déconnecter</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link active" href="{{path('app_login')}}">Se connecter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="{{path('app_register')}}">Créer un compte</a>
                        </li>
                    {% endif %}

                </ul>
            </div>
        </div>
    </nav>
    </header>
    <body class="glow-all">
    <body>
    <div class="main-content">
        {% for msg in app.session.flashBag.get('success') %}
        <div class="alert alert-success">
            {{ msg }}
        </div>
        {% endfor %}
    </div>
    <div class="container">
        {% block body %}{% endblock %}
    </div>
    
        <footer class="bg-light text-center text-lg-start">
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2022 Copyright:
            <a class="text-dark" href="#">Sortir.com</a>
        </div>
        <!-- Copyright -->
    </footer>
    </body>
</html>
