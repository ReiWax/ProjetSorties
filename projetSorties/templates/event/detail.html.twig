{% extends 'base.html.twig' %}

{% block title %}Création d'une Sortie !{% endblock %}

{% block body %}
<style>
  .glow {
  font-size: 15px;
  color: black;
  font-weight : bold;
  -webkit-animation: glow 0.2s ease-in-out infinite alternate;
  -moz-animation: glow 0.2s ease-in-out infinite alternate;
  animation: glow 0.2s ease-in-out infinite alternate;
  
}
.glow-text{
     -webkit-animation: glow-text 0.2s ease-in-out infinite alternate;
  -moz-animation: glow-text 0.2s ease-in-out infinite alternate;
  animation: glow-text 0.2s ease-in-out infinite alternate;
}


@-webkit-keyframes glow {
  from {
    text-shadow: 0 0 10px #fff, 0 0 20px #fff, 0 0 30px #55FC3E, 0 0 40px #3EF9FC, 0 0 50px #55FC3E, 0 0 60px #3EF9FC, 0 0 70px #55FC3E;
  }
  to {
    text-shadow: 0 0 20px #fff, 0 0 30px #C03EFC, 0 0 40px #FCC53E, 0 0 50px #C03EFC, 0 0 60px #FCC53E, 0 0 70px #C03EFC, 0 0 80px #FCC53E;
  }
}


</style>


<div class="example-wrapper ">
    <div class="container text-right row" style="text-align : right!important">  
        <div class="col glow">
        <h4 >Detail de la sortie {{event.name }}</h4>
<div class="example-wrapper">
    <div class="container text-center">
        <h1>Detail de la sortie {{event.name }}</h1>
        {% if event.state.id != 2 %}
        <div>
            <div>
                <p >Date et heure de la sortie : {{event.dateTimeStartAt|date('Y-m-d H:m:s')}}</p>
                <p >Date limite d'inscription : {{event.dateLimitRegistrationAt|date('Y-m-d H:m:s')}}</p>
                <p >Nombre de places : {{event.nbMaxRegistration}}</p>
                <p >Durée : {{event.duration}} {% if event.duration < 1 %}minute{% else %}minutes{% endif %}</p>
                {% if event.description != null%}<p>Description et infos : {{event.description}}</p>{% endif %}
            </div>
            <div>
                <p >Ville organisatrice : {{event.location.city.name}}</p>
                <p >Lieu : {{event.location.name}}</p>
                <p >Rue : {{event.location.street}}</p>
                <p >Code postal : {{event.location.city.zipCode}}</p>
                {% if event.location.lat != null and event.location.long != null %}
                <p >Latitude : {{event.location.lat}}</p>
                <p >Longitude : {{event.location.long}}</p>
                {% endif %}
            </div>
        </div>
       
        <div class="col text-center">
            <table class="table table-light table-striped table-bordered border-dark">
                <caption align="top">Liste des participants</caption>

                <thead class="table-secondary  border-dark">
                    <tr>
                        <th>Pseudo</th>
                        <th>Nom</th>
                    </tr>
                </thead>
                {% for u  in event.users %}
                <td> <a href="{{path('app_user_detail',{'id': u.id})}}">{{ u.pseudo }}</a></td>
                    <td>{{ u.name }} {{u.lastname|upper}}</td>
                {% endfor %}
            </table>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
